{{! Formulario de registro }}

<div class="flex items-center justify-center h-screen bg-[#144272]">
  <form
    action="http://localhost:8080/api/register"
    method="post"
    class="bg-[#fff] p-8 rounded shadow-md w-80"
  >
    <div class="mb-4">
      <label
        for="first_name"
        class="block text-sm font-[Montserrat] mb-1"
      >Nombre</label>
      <input
        type="text"
        name="first_name"
        required
        class="w-full p-2 border rounded focus:outline-none focus:border-[#bfeaf5]"
      />
    </div>
    <div class="mb-4">
      <label
        for="last_name"
        class="block text-sm font-[Montserrat] mb-1"
      >Apellido</label>
      <input
        type="text"
        name="last_name"
        required
        class="w-full p-2 border rounded focus:outline-none focus:border-[#bfeaf5]"
      />
    </div>
    <div class="mb-4">
      <label
        for="email"
        class="block text-sm font-[Montserrat] mb-1"
      >Email</label>
      <input
        type="text"
        name="email"
        required
        class="w-full p-2 border rounded focus:outline-none focus:border-[#bfeaf5]"
      />
    </div>
    <div class="mb-4">
      <label for="age" class="block text-sm font-[Montserrat] mb-1">Edad</label>
      <input
        type="number"
        name="age"
        required
        class="w-full p-2 border rounded focus:outline-none focus:border-[#bfeaf5]"
      />
    </div>
    <div class="mb-4">
      <label
        for="password"
        class="block text-sm font-[Montserrat] mb-1"
      >Contrase√±a</label>
      <input
        type="text"
        name="password"
        required
        class="w-full p-2 border rounded focus:outline-none focus:border-[#bfeaf5]"
      />
    </div>
    <button
      type="submit"
      value="submit"
      class="w-full bg-[#eafdfc] p-2 rounded hover:bg-[#bfeaf5] focus:outline-none focus:ring focus:ring-[#bfeaf5]"
    >Enviar</button>

  </form>
</div>